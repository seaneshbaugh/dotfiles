alias curl="noglob curl"

alias please="sudo !!"

alias cdiff="curldiff"

alias sf="searchfiles"

alias emacs="/usr/local/Cellar/emacs/24.4/bin/emacs-24.4"

alias listenports="sudo lsof -nP -iTCP -sTCP:LISTEN"

