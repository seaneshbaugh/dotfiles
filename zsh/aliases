alias allgemsets="rvm all do rvm gemset list"

alias rcat="find . -type f 2>/dev/null -exec printf '\033[1;33m' \; -exec printf {} \; -exec printf '\033[0m\n' \; -exec echo '=======================' \; -exec cat {} \; -exec echo '' \;"
